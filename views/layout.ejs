        <script type="text/javascript" src="/linker/js/vendor/react/JSXTransformer.js"></script>
        <script type="text/javascript" src="/linker/js/vendor/aviator/aviator.js"></script>
        <script type="text/javascript" src="/linker/js/vendor/backbone-react-component/component.js"></script>

        <!-- listen on socket.io for incoming messages -->
        <script type="text/jsx" src="/js/app.js"></script>
